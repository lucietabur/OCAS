{# src/OC/PlatformBundle/Resources/views/delete.html.twig #}


{% extends "@OCAS/layout.html.twig" %}


{% block title %}

  Supprimer une session - {{ parent() }}

{% endblock %}
{% block content %}
<div class="col-sm-6 offset-sm-4 ">
  <h2>Supprimer une session</h2>
  <p>
    Etes-vous certain de vouloir supprimer "{{ session.formation.libelle }}" ?
  </p>

  <form action="{{ path('session_delete', {'id': session.id}) }}" method="post" class="align-self-center">
    <a href="{{ path('session_list', {'id': session.id}) }}" class="btn btn-primary">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
</div>
{% endblock %}
