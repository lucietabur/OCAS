{% extends "@OCAS/layout.html.twig" %}
{# changer l'heritage de template #}
{% block title %}{{h1}}{% endblock %}
{% block header %}{{h1}}{% endblock %}
{% block content %}

<div class="col-8 offset-2">
  {% form_theme form "bootstrap_4_horizontal_layout.html.twig" %}
  {{ form(form)}}

  {# {{form_start(searchform, {action:path('stagiaire_search')})}} #}
  <a role="button" href="{{ path('session_list')}}" class="btn btn-primary">Retour à la liste</a>
  {% if id is defined %}
    <a role="button" href="{{ path('detail_list',{'session_id': session.id })}}" class="btn btn-success">Liste des stagiaires</a>
    <a role="button" href="{{ path('session_delete',{'id': session.id })}}" class="btn btn-danger">Supprimer</a>
    <a role="button" href="{{ path('session_generate',{'id': session.id }) }}" class="btn btn-primary">Génerer</a>
  {% endif %}
  </div>
{% endblock %}
