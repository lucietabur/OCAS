{% extends "@OCAS/layout.html.twig" %}

{% block title %}{{h1}}{% endblock %}
{% block header %}{{h1}}{% endblock %}
{% block content %}
<table class="table">
  <thead>
    <tr>
      <th scope="row">Formation</th>
      <th>Groupe</th>
      <th>Intervenant</th>
      <th>Lieu</th>
