  <td>{{ session.lieu }}</td>
  <td>{{ session.dateSeance|date("d/m/Y") }}</td>
  <td>{{ session.dateSeance|date("H:i") }}</td>
  <td>{{ session.dateRetour|date("d/m/Y") }}</td>
