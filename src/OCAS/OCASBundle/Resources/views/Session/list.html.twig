  </thead>
  <tbody>
{% for session in sessions %}
<tr>
  {% if  session.formation != null and session.formation.id != '0'%}
    <th scope="row"><a href="{{ path('session_edit',{'id': session.id }) }}">{{ session.formation.observation }}</a></td>
  {% else %}
    <th  scope="row">{{ session.observation }}</td>
  {% endif %}

  <td>{{ session.groupe }}</a></td>
  <td>
    {% for intervenant in session.intervenants %}
      {{ intervenant.nom }}
    {% endfor %}
